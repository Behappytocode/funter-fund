rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: Is the user logged in?
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper: Is the user an Admin?
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Users Collection: Everyone logged in can see members
    match /users/{userId} {
      allow read: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Deposits Collection: Communal transparency
    match /deposits/{depositId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Loans Collection: Communal transparency
    match /loans/{loanId} {
      allow read: if isSignedIn();
      // Members can create a PENDING loan request for themselves
      allow create: if isAdmin() || (
        isSignedIn() && 
        request.resource.data.memberId == request.auth.uid && 
        request.resource.data.status == 'PENDING'
      );
      allow update, delete: if isAdmin();
    }

    // Feedback Collection: Private thread between member and admin
    match /feedback/{msgId} {
      allow read: if isAdmin() || (isSignedIn() && (resource == null || resource.data.threadId == request.auth.uid));
      allow create: if isSignedIn() && (request.resource.data.threadId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Settings/DevProfile
    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}